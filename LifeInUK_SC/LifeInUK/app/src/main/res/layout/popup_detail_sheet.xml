<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:padding="20dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="8dp"
        android:text="Time : "
        android:id="@+id/tv_popup_detail_sheet_time"
        android:layout_alignParentTop="true"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_detail_sheet"
        android:dividerHeight="5dp"
        android:layout_below="@+id/tv_popup_detail_sheet_time"
        android:layout_above="@+id/btn_popup_detail_sheet_ok"
        ></ListView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="OK"
        android:layout_alignParentBottom="true"
        android:background="@drawable/circle_image_holo"
        android:layout_marginTop="10dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:textColor="@drawable/button_pressed"
        android:id="@+id/btn_popup_detail_sheet_ok"
        />

</RelativeLayout>

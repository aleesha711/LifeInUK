<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Select Language"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"></TextView>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/rg_language_selector"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    ></View>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="English"
                    android:padding="8dp"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:button="@drawable/custom_button_black"
                    android:id="@+id/rb_language_selector_english"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    ></View>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:button="@drawable/custom_button_black"
                    android:text="Polish"
                    android:ellipsize="end"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:id="@+id/rb_language_selector_polish"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    ></View>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:button="@drawable/custom_button_black"
                    android:text="Spanish"
                    android:padding="8dp"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:id="@+id/rb_language_selector_spanish"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    ></View>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:button="@drawable/custom_button_black"
                    android:text="Urdu"
                    android:ellipsize="end"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:id="@+id/rb_language_selector_urdu"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    ></View>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:button="@drawable/custom_button_black"
                    android:text="Arabic"
                    android:ellipsize="end"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:id="@+id/rb_language_selector_arabic"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    ></View>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:button="@drawable/custom_button_black"
                    android:text="Farsi"
                    android:ellipsize="end"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:id="@+id/rb_language_selector_farsi"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    ></View>


            </RadioGroup>



        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_image_red"
            android:textColor="@drawable/button_pressed"
            android:text="Cancel"
            android:textSize="20sp"
            android:id="@+id/btn_popup_language_cancel"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_image_red"
            android:textColor="@drawable/button_pressed"
            android:text="OK"
            android:textSize="20sp"
            android:id="@+id/btn_popup_language_ok"
            />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:background="@color/blue"
    >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Play"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:visibility="gone"
            android:drawableLeft="@drawable/ic_play_arrow_white_24dp"
            android:background="#0000"
            android:padding="5dp"
            android:id="@+id/btn_action_bar_play"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Pause"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_pause_white_24dp"
            android:background="#0000"
            android:padding="5dp"
            android:visibility="gone"
            android:id="@+id/btn_action_bar_pause"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="QUIT"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_power_settings_new_white_24dp"
            android:background="#0000"
            android:padding="5dp"
            android:id="@+id/btn_action_bar_quit"
            android:visibility="gone"
            />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:src="@drawable/ic_settings_white_24dp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:id="@+id/iv_action_bar_setting"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="MENU"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:id="@+id/tv_action_bar_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="00:00"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/tv_action_bar_timer"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />

</RelativeLayout>

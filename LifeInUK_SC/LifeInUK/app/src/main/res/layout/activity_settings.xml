<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="ui.activity.Settings">
    <include
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        layout="@layout/custom_action_bar"
        android:id="@+id/include_action_bar_settings">
    </include>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_baar"
        ></View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/rl_settings_langauge"
                android:background="@drawable/onpressed"
                >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_public_black_24dp"
                android:id="@+id/iv_item_settings_language"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Languages"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_item_settings_language"
                />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"
                android:background="@color/lsilver"
                ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/rl_settings_notification"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/onpressed">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_notifications_black_24dp"
                    android:id="@+id/iv_item_settings_notification"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notifications Interaction"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_item_settings_notification"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_below="@+id/tv_item_settings_notification"
                    android:id="@+id/ll_settings_notifications_show"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        >
                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Automatically move to next question"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_toLeftOf="@+id/sw_settings_notifications_next"
                            />
                        <com.kyleduo.switchbutton.SwitchButton
                            android:id="@+id/sw_settings_notifications_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:kswThumbColor="@color/btn_green"
                            app:kswBackColor="@color/bg_green"
                            app:kswTextOn="YES"
                            app:kswTextOff="No"
                            android:paddingRight="10dp"
                            android:textColor="@color/white"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="60dp"
                    android:background="@color/lsilver"
                    ></View>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/onpressed"
                android:id="@+id/rl_settings_update"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_update_black_24dp"
                    android:id="@+id/iv_item_settings_update"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_item_settings_update"
                    />
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_item_settings_update_version"
                    android:text="Latest version installed"
                    android:textColor="@color/black"
                    />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="20dp"
                android:background="@color/lsilver"
                ></View>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
